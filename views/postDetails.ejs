<% layout('boilerplate') -%>
<div class="container">
    <div class="row">
      
            <div class="col-sm-6 offset-sm-3 col-lg-3 offset-lg-1 my-3 justify-content-center">
                <div class="card mx-auto" style="width: 18rem;">
                <img src="../uploads/<%=post.path%>" class="card-img-top" alt="...">
                <div class="card-body">
                    <h5 class="card-title"><%=post.title%></h5>
                    <p class="card-text"><%=post.desc%></p>
                    <div class="d-flex w-100  justify-content-between">
                       
                        <a href="/post/edit/<%=post._id%>" class="btn btn-primary">Edit</a>
                        <form action="/post/<%=post._id%>?_method=DELETE" method="post"> <button class="btn btn-danger">Delete</a></form>
                    </div>
                </div>
            </div>
            </div>           

    </div>
</div>