<%- layout('boilerplate') -%>

<div class="container"><h1>HOME PAGE</h1>
    <div class="row">
        <% for (let post of posts) { %>
            <div class="col-sm-6 offset-sm-3 col-lg-3 offset-lg-1 my-3 justify-content-center">
                <div class="card mx-auto" style="width: 18rem;">
                <img src="uploads/<%=post.path%>" class="card-img-top" alt="...">
                <div class="card-body">
                    <h5 class="card-title"><%=post.title%></h5>
                    <p class="card-text"><%=post.desc%></p>
                    <a href="/post/<%=post._id%>" class="btn btn-primary">Details</a>
                </div>
            </div>
            </div>           
        <%}%>
    </div>
</div>